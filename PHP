<?php
$sql = "SELECT * FROM animal";
$result = $conn->query($sql);

if ($result->num_rows > 0) {
    while($row = $result->fetch_assoc()) {
        echo "<div>";
        echo "<h3>" . $row['Name_animal'] . "</h3>";
        echo "<p>Type: " . $row['Type_food'] . "</p>";
        echo "<p>Habitat ID: " . $row['Habitat_ID'] . "</p>";
        echo "<img src='images/" . $row['Image_animal'] . "' width='120'>";
        echo "</div><hr>";
    }
} else {
    echo "Aucun animal trouvÃ©.";
}
?>
