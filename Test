---

app.js

// Simple front-end state manager for WorkSphere
(() => {
  // -- state
  const state = {
    staff: [
      { id: genId(), name: 'Amina', role: 'Receptionist', photo: '', email: 'amina@example.com', phone: '+212600000001', exps: ['Front desk 2y'], location: null },
      { id: genId(), name: 'Youssef', role: 'Technician', photo: '', email: 'youssef@example.com', phone: '+212600000002', exps: ['IT support 3y'], location: null },
      { id: genId(), name: 'Khadija', role: 'Cleaning', photo: '', email: 'khadija@example.com', phone: '+212600000003', exps: ['Cleaning 5y'], location: null }
    ],
    zones: {
      conference: { cap: 6, members: [], required: false },
      reception: { cap: 1, members: [], required: true },
      servers: { cap: 3, members: [], required: true },
      security: { cap: 3, members: [], required: true },
      staff: { cap: 8, members: [], required: false },
      archive: { cap: 2, members: [], required: true }
    }
  };

  // DOM refs
  const unassignedList = document.getElementById('unassigned-list');
  const addBtn = document.getElementById('add-worker-btn');
  const modal = document.getElementById('modal-add');
  const closeModal = document.getElementById('close-modal');
  const cancelModal = document.getElementById('cancel-modal');
  const addForm = document.getElementById('add-form');
  const photoUrl = document.getElementById('photo-url');
  const photoPreview = document.getElementById('photo-preview-container');
  const experiencesList = document.getElementById('experiences-list');
  const addExperienceBtn = document.getElementById('add-experience');

  const profileModal = document.getElementById('modal-profile');
  const closeProfile = document.getElementById('close-profile');

  // helpers
  function genId(){ return Math.random().toString(36).slice(2,9); }
  function findById(id){ return state.staff.find(s=>s.id===id); }
  function isEligible(role, zone){
    // rules from spec
    if(zone==='reception') return role==='Receptionist';
    if(zone==='servers') return role==='Technician';
    if(zone==='security') return role==='Security';
    if(role==='Manager') return true;
    if(role==='Cleaning') return zone!=='archive';
    // others free except zones handled above
    return true;
  }
  function render(){
    // update caps
    for(const z in state.zones){
      const capEl = document.getElementById('cap-'+z);
      if(capEl) capEl.textContent = state.zones[z].cap;
    }

    // unassigned
    unassignedList.innerHTML = '';
    state.staff.filter(s=>!s.location).forEach(s=>{
      const card = document.createElement('div');
      card.className = 'employee-card p-2 rounded flex items-center gap-3 bg-slate-50';
      card.innerHTML = `
        <img src="${s.photo||'https://via.placeholder.com/48'}" class="w-10 h-10 rounded object-cover" />
        <div class="flex-1 text-sm">
          <div class="font-medium">${s.name}</div>
          <div class="text-xs text-slate-500">${s.role}</div>
        </div>
        <div class="flex gap-1">
          <button data-id="${s.id}" class="open-profile text-xs px-2 py-1 rounded bg-slate-100">Open</button>
        </div>
      `;
      unassignedList.appendChild(card);
    });

    // zones
    for(const z in state.zones){
      const container = document.getElementById('members-'+z);
      container.innerHTML = '';
      const zone = state.zones[z];
      // mark required empty
      const zoneEl = document.getElementById('zone-'+z);
      if(zone.required && zone.members.length===0){
        zoneEl.classList.add('required-empty');
      } else {
        zoneEl.classList.remove('required-empty');
      }

      zone.members.forEach(id=>{
        const s = findById(id);
        if(!s) return;
        const el = document.createElement('div');
        el.className = 'employee-card p-2 rounded flex items-center gap-3 bg-white shadow-sm';
        el.innerHTML = `
          <img src="${s.photo||'https://via.placeholder.com/48'}" class="w-10 h-10 rounded object-cover" />
          <div class="flex-1 text-sm">
            <div class="font-medium">${s.name}</div>
            <div class="text-xs text-slate-500">${s.role}</div>
          </div>
          <div class="flex gap-1">
            <button data-id="${s.id}" class="open-profile text-xs px-2 py-1 rounded bg-slate-100">Open</button>
            <button data-id="${s.id}" data-remove-zone="${z}" class="remove-btn text-xs px-2 py-1 rounded bg-red-100">X</button>
          </div>
        `;
        container.appendChild(el);
      });
    }

    // wire profile buttons
    document.querySelectorAll('.open-profile').forEach(b=>{
      b.onclick = ()=>{
        const id = b.getAttribute('data-id');
        openProfile(id);
      }
    });

    document.querySelectorAll('.remove-btn').forEach(b=>{
      b.onclick = ()=>{
        const id = b.getAttribute('data-id');
        const z = b.getAttribute('data-remove-zone');
        unassignFromZone(id, z);
      }
    });

    // add-zone buttons
    document.querySelectorAll('[data-add-zone]').forEach(btn=>{
      btn.onclick = ()=>{
        const zone = btn.getAttribute('data-add-zone');
        openAssignPicker(zone);
      }
    });
  }

  // assign picker
  function openAssignPicker(zone){
    // simple prompt selector - build small dialog
    const eligible = state.staff.filter(s=>!s.location && isEligible(s.role, zone));
    if(eligible.length===0){
      alert('No eligible unassigned employees for zone '+zone);
      return;
    }
    const names = eligible.map(e=>`${e.name} (${e.role})`).join('\n');
    const pick = prompt('Select index to assign to '+zone+'\n'+names+'\nEnter number (1..'+eligible.length+')');
    const idx = parseInt(pick, 10);
    if(!idx || idx<1 || idx>eligible.length) return;
    const sel = eligible[idx-1];
    assignToZone(sel.id, zone);
  }

  function assignToZone(id, zone){
    const z = state.zones[zone];
    if(!z) return;
    if(z.members.length>=z.cap){ alert('Zone '+zone+' is full'); return; }
    const s = findById(id);
    if(!isEligible(s.role, zone)) { alert('Employee not eligible for this zone'); return; }
    // remove from old if any
    if(s.location){
      const old = state.zones[s.location];
      if(old) old.members = old.members.filter(m=>m!==id);
    }
    s.location = zone;
    z.members.push(id);
    render();
  }

  function unassignFromZone(id, zone){
    const z = state.zones[zone];
    if(!z) return;
    z.members = z.members.filter(m=>m!==id);
    const s = findById(id);
    if(s) s.location = null;
    render();
  }

  // profile
  function openProfile(id){
    const s = findById(id);
    if(!s) return;
    document.getElementById('profile-name').textContent = s.name;
    document.getElementById('profile-role').textContent = s.role;
    document.getElementById('profile-email').textContent = s.email || '';
    document.getElementById('profile-phone').textContent = s.phone || '';
    document.getElementById('profile-photo').src = s.photo||'https://via.placeholder.com/240';
    const ul = document.getElementById('profile-exps'); ul.innerHTML = '';
    (s.exps||[]).forEach(ex=>{ const li = document.createElement('li'); li.textContent = ex; ul.appendChild(li); });
    document.getElementById('profile-location').textContent = s.location || 'Unassigned';
    profileModal.classList.remove('hidden');
  }

  // modal handlers
  addBtn.onclick = ()=> modal.classList.remove('hidden');
  closeModal.onclick = ()=> modal.classList.add('hidden');
  cancelModal.onclick = ()=> modal.classList.add('hidden');

  closeProfile.onclick = ()=> profileModal.classList.add('hidden');

  // photo preview
  photoUrl.oninput = ()=>{
    const v = photoUrl.value.trim();
    if(!v) { photoPreview.innerHTML = 'Preview will appear here'; return; }
    photoPreview.innerHTML = `<img src="${v}" class="w-24 h-24 object-cover rounded">`;
  }

  // experiences
  function addExperienceInput(value=''){
    const id = genId();
    const wrapper = document.createElement('div');
    wrapper.className = 'flex gap-2';
    wrapper.innerHTML = `
      <input data-exp-id="${id}" class="flex-1 p-2 border rounded" value="${value}" />
      <button type="button" class="rm-exp px-2 rounded bg-red-100">X</button>
    `;
    experiencesList.appendChild(wrapper);
    wrapper.querySelector('.rm-exp').onclick = ()=> wrapper.remove();
  }
  addExperienceBtn.onclick = ()=> addExperienceInput();

  // create default experience input for UI
  addExperienceInput('Example: Front desk 2 years');

  addForm.onsubmit = (e)=>{
    e.preventDefault();
    const f = new FormData(addForm);
    const name = f.get('name').trim();
    const role = f.get('role');
    const photo = f.get('photo').trim();
    const email = f.get('email').trim();
    const phone = f.get('phone').trim();
    const exps = Array.from(experiencesList.querySelectorAll('input')).map(i=>i.value).filter(Boolean);
    const newStaff = { id: genId(), name, role, photo, email, phone, exps, location: null };
    state.staff.push(newStaff);
    modal.classList.add('hidden');
    addForm.reset();
    experiencesList.innerHTML = '';
    addExperienceInput('Example: ...');
    render();
  }

  // initial render
  render();

  // expose for debugging
  window.WORKSPHERE = { state, assignToZone, unassignFromZone, render };
})();


---

README / Deployment & Notes

To run: save index.html and app.js (content above) in same folder and open index.html in a browser.

Validation: use W3C validator on index.html. Tailwind CDN is used for speed.

Next steps I can do for you now (pick any):

Add drag-and-drop assignment.

Replace the prompt picker with a proper modal selection UI.

Persist data in localStorage or a JSON backend (Node/Express) and prepare API endpoints.

Prepare a GitHub repo and deploy to GitHub Pages or Vercel with a ready index.html.




